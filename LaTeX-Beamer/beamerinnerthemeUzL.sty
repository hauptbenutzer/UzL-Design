% Title Page
%
%

\setbeamerfont{title}{series=\lfseries}
\defbeamertemplate*{title page}{UzL}
{
	\mbox{}\vfill
	\centering
	{
		\usebeamercolor[fg]{title}\usebeamerfont*{title}\huge\inserttitle\par
		\usebeamercolor[fg]{subtitle}\usebeamerfont{subtitle}\insertsubtitle
	}%
	\vskip6ex
			{
		    	\usebeamercolor[fg]{author}\usebeamerfont{author}\insertauthor\par
			\vskip6ex
			}
			{\usebeamerfont*{institute}
			\small
		    	\usebeamercolor[fg]{institute}\usebeamerfont{institute}\insertinstitute\par
			\vskip6ex
			}
			{
	    		\usebeamercolor[fg]{date}\usebeamerfont{date}\insertdate\par
			}
			\vskip4ex
			\vfill
			\vskip1.8ex
			\ifUzL@showslogan
				\hfill\hskip-1.8em\pgfuseimage{uzlslogan}
			\fi
	\mbox{}
}
\newcommand{\btVFill}{\vskip0pt plus 1filll}
%
% Section Page
%
\setbeamertemplate{section page}
{

}
\defbeamertemplate*{section page}{UzL}[1][]
{
	~ \\ \btVFill
	\begin{beamercolorbox}[sep=12pt]{part title}
	{\usebeamerfont*{section title} \fontsize{30pt}{45pt}\selectfont \insertsection\par}
	{\usebeamerfont{subsection title} \big #1 \par}\bigskip\bigskip
	\end{beamercolorbox}
}
